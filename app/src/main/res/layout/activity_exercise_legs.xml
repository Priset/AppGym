<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_one"
    tools:context=".activity.legsActivity.ExerciseLegsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/legs_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_legs"
            android:textColor="@color/white"
            android:textSize="@dimen/S50S"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/X10X"
            android:background="@drawable/button_style"
            android:backgroundTint="@color/button_three"/>

        <ImageView
            android:id="@+id/legs_image_one"
            android:layout_width="@dimen/X500X"
            android:layout_height="@dimen/X400X"
            android:src="@drawable/legs1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/legs_one"/>

        <TextView
            android:id="@+id/legs_exercise_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/S25S"
            android:text="@string/barbell_squats"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/X90X"
            app:layout_constraintStart_toStartOf="@+id/legs_image_one"
            app:layout_constraintEnd_toEndOf="@+id/legs_image_one"
            app:layout_constraintBottom_toBottomOf="@+id/legs_image_one"/>

        <TextView
            android:id="@+id/num_sets_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/S30S"
            android:text="@string/sets"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/X90X"
            app:layout_constraintStart_toStartOf="@+id/legs_image_one"
            app:layout_constraintEnd_toEndOf="@+id/legs_image_one"
            app:layout_constraintTop_toBottomOf="@+id/legs_exercise_one"/>

        <TextView
            android:id="@+id/num_repetition_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/S30S"
            android:textStyle="bold"
            android:text="@string/repetitions"
            android:layout_marginEnd="@dimen/X90X"
            app:layout_constraintStart_toStartOf="@+id/legs_image_one"
            app:layout_constraintEnd_toEndOf="@+id/legs_image_one"
            app:layout_constraintTop_toBottomOf="@+id/num_sets_legs"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_time_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time_button"
            android:textSize="@dimen/S20S"
            android:textStyle="italic"
            android:backgroundTint="@color/button_one"
            android:background="@drawable/button_style2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/num_repetition_legs"
            android:layout_marginStart="@dimen/X60X"
            android:layout_marginTop="@dimen/X30X"
            android:padding="@dimen/X6X"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_description_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_button"
            android:textStyle="italic"
            android:backgroundTint="@color/button_one"
            android:background="@drawable/button_style2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/num_repetition_legs"
            android:layout_marginEnd="@dimen/X50X"
            android:layout_marginTop="@dimen/X30X"
            android:padding="@dimen/X5X"/>

        <ImageButton
            android:id="@+id/button_exit_legs"
            android:layout_width="@dimen/X50X"
            android:layout_height="@dimen/X50X"
            android:scaleType="centerCrop"
            android:src="@drawable/exit2"
            android:background="@drawable/button_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/X12X"
            android:layout_margin="@dimen/X10X"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_next_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_three"
            android:background="@drawable/button_style2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/X10X"
            android:layout_marginBottom="@dimen/X10X"/>

        <ProgressBar
            android:id="@+id/time_bar_legs"
            android:layout_width="@dimen/X350X"
            android:layout_height="@dimen/X20X"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_exit_legs"
            android:layout_marginBottom="@dimen/X100X"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>